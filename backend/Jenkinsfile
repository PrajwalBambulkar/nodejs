pipeline {
    agent any

    options {
        skipDefaultCheckout()
    }

    environment {
        DOCKER_IMAGE = 'PrajwalBambulkar/3tiernodejs-backend'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout changelog: true, poll: true,scm: scm
            }
        }

        stage('Verify Changes in Backend Folder') {
            when {
                changeset "backend/**"
            }
            steps {
                echo "✅ Detected changes in backend folder."
            }
        }

        stage('Install & Test') {
            when {
                changeset "backend/**"
            }
            steps {
                dir('backend') {
                    sh 'npm install'
                    sh 'npm test || echo "Skipping tests (none found)"'
                }
            }
        }

        stage('Build Docker Image') {
            when {
                changeset "backend/**"
            }
            steps {
                dir('backend') {
                    script {
                        docker.build("${DOCKER_IMAGE}:${env.BUILD_NUMBER}")
                    }
                }
            }
        }

        stage('Push Docker Image') {
            when {
                changeset "backend/**"
            }
            steps {
                dir('backend') {
                    script {
                        docker.withRegistry('https://index.docker.io/v1/', '03b85bf0-3391-428c-bd80-0fce51e052b5') {
                            docker.image("${DOCKER_IMAGE}:${env.BUILD_NUMBER}").push()
                        }
                    }
                }
            }
        }
    }

    post {
        success {
            echo '✅ Backend CI pipeline completed successfully.'
        }
        failure {
            echo '❌ Backend CI pipeline failed.'
        }
    }
}

