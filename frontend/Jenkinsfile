pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'prajwalbambulkar/3tiernodejs-frontend'
        IMAGE_TAG = "${env.BUILD_NUMBER}"
        DOCKER_CREDENTIALS_ID = 'docker-hub-credentials' // Make sure this matches the Jenkins credentials ID
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            when {
                changeset "frontend/**"
            }
            steps {
                dir('frontend') {
                    script {
                        echo "üîß Building Docker image: ${DOCKER_IMAGE}:${IMAGE_TAG}"
                        def image = docker.build("${DOCKER_IMAGE}:${IMAGE_TAG}")
                        docker.image("${DOCKER_IMAGE}:${IMAGE_TAG}").inspect()
                    }
                }
            }
        }

        stage('Push Docker Image') {
            when {
                changeset "frontend/**"
            }
            steps {
                dir('frontend') {
                    script {
                        echo "üì§ Pushing Docker image to DockerHub"
                        docker.withRegistry('https://index.docker.io/v1/', DOCKER_CREDENTIALS_ID) {
                            docker.image("${DOCKER_IMAGE}:${IMAGE_TAG}").push()
                        }
                    }
                }
            }
        }
    }

    post {
        success {
            echo '‚úÖ Frontend CI pipeline completed successfully.'
        }
        failure {
            echo '‚ùå Frontend CI pipeline failed.'
        }
    }
}
